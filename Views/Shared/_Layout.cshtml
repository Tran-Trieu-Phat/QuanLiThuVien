@{ 
    string actionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
    string controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    bool activeHome = actionName == "Index";
    bool activeHome1 = actionName == "DanhMucSach";
    bool activeHome2 = actionName == "Create";
    bool activeHome3 = actionName == "ListDocGia";
    bool activeHome4 = actionName == "QuanLiPhong";
    bool activeHome5 = actionName == "QuanLiPhong";
    bool activeHome6 = actionName == "Quanlinv";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Quản lý thư viện</title>
    <link href="~/CSS/style.css" rel="stylesheet" />

    <!-- nhúng icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
</head>
<body>
    <input type="checkbox" id="menu-toggle">
    <div class="sidebar">
        <div class="side-header">
            <h3>Quản Lý Thư Viện<span></span></h3>
        </div>

        <div class="side-content">
            <div class="profile">
                <div ><img src="~/img/@Session["HinhAnh"]" alt="Profile" class="rounded-circle" style="width:90px; height: 90px;border-radius:50%"></div>
                <h4>Quản lý</h4>
                <small>@Session["HoTen"]</small>
            </div>

            <!-- Menu -->
            <div class="side-menu">
                <ul>
                    <li>
                        <a href="@Url.Action("Index","Home")" class="@(activeHome ? "active" : "")">
                            <span class="las la-home"></span>
                            <small>Trang chủ</small>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("DanhMucSach","Home")" class="@(activeHome1 ? "active" : "")">
                            <span class="las la-book"></span>
                            <small>Danh mục sách</small>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Quanlimuon","Home")" class="@(activeHome5 ? "active" : "")">
                            <span><i class="las la-truck"></i></span>
                            <small>Mượn trả sách</small>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Create","Home")" class="@(activeHome2 ? "active" : "")">
                            <span><i class="las la-plus-square"></i></span>
                            <small>Nhập sách</small>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Quanlinv","Home")" class="@(activeHome6 ? "active" : "")">
                            <span class="las la-user"></span>
                            <small>Quản lý nhân viên</small>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ListDocGia","Home")" class="@(activeHome3 ? "active" : "")">
                            <span class="las la-user"></span>
                            <small>Quản lý độc giả</small>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("QuanLiPhong","Home")" class="@(activeHome4 ? "active" : "")">
                            <span><i class="las la-hospital-alt"></i></span>
                            <small>Quản lý phòng họp</small>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="main-content">
         Sẽ phát triển sau này 
        <header>
            <div class="header-content">
                <label for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>
                <div class="header-menu">
                    <div class="user">
                        <div class="bg-img"><img src="~/img/@Session["HinhAnh"]" alt="Profile" class="rounded-circle" style="width:30px; height: 30px;border-radius:50%"></div>
                        <span class="las la-power-off"></span>
                        <span><a href="@Url.Action("Logout", "Home")">Đăng xuất</a></span>
                    </div>
                </div>
            </div>
        </header>
       @RenderBody();

    </div>
</body>
</html>
